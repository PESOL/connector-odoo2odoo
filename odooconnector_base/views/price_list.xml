<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_odooconnector_product_pricelist_form" model="ir.ui.view">
            <field name="name">odooconnector.product.pricelist.form</field>
            <field name="model">product.pricelist</field>
            <field name="inherit_id" ref="product.product_pricelist_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='version_id']" position="after">
                    <label string="Odoo Connector" attrs="{'invisible': [('oc_bind_ids','=',[])]}"/>
                    <field name="oc_bind_ids">
                        <tree string="Bindings" editable="bottom">
                            <field name="backend_id" />
                            <field name="external_id" />
                            <field name="exported_record" readonly="1" />
                        </tree>
                    </field>
                </xpath>
            </field>
        </record>

    </data>
</openerp>